// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Status {
  Novo
  Contatado
  Interessado
  Negociacao
  Vendido
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String  @unique
  hashedPassword String
  image          String?
}

model ExpoForm {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  empresa   String
  ramo      String
  telefone  String
  email     String
  status    Status   @default(Novo)
  createdAt DateTime @default(now())
}

model MainPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  alt       String
  public_id String
  createdAt DateTime @default(now())
}

model SobreNosPage {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  ativo  Boolean @default(false)
  pagina String
}

model Empresas {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  nome      String
  email     String?
  instagram String?
  telefone  String?
  whatsapp  String?
  endereco  String?
  cidade    String?
  estado    String?
  createdAt DateTime @default(now())
}
